{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++.exe build active file",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/g++.exe",  // Đảm bảo đường dẫn chính xác tới g++
            "args": [
                "-fdiagnostics-color=always",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-IC:/msys64/ucrt64/include",  // Đường dẫn thư viện SDL2
                "-LC:/msys64/ucrt64/lib",  // Đường dẫn thư viện SDL2
                "-lSDL2", 
                "-lSDL2main",
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-lSDL2_ttf",
                "-mwindows"
            ],
            "group": {
                "kind": "build",
                "isDefault": true  // Đặt là mặc định để biên dịch mỗi khi chạy
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
